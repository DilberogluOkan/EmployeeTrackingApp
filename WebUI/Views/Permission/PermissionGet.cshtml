@using Entities.Concrete
@model Permission
@{
    ViewBag.Title = "PermissionGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>İzin Bilgisi Güncelle</h3>
@using (Html.BeginForm("PermissionUpdate", "Permission", FormMethod.Post))
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                <thead>

                </thead>
                <tbody>
                    <tr role="row" class="odd">
                        <td class="sorting_1"><b>İzin Şekli</b></td>
                        <td>
                            @Html.HiddenFor(x => x.PersonelKimlikId)
                            @Html.HiddenFor(x => x.PersonelIzinId)
                            @Html.TextBoxFor(x => x.IzinSekli, null, new { @class = "form-control" })
                        </td>
                        <td><b>İzin Sebebi</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.IzinSebebi, null, new { @class = "form-control" })
                        </td>
                        <td><b>Borçlanma</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.Borclanma, null, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td><b>Yil</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.Yil, null, new { @class = "form-control" })
                        </td>
                        <td><b>Ay</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.Ay, null, new { @class = "form-control" })
                        </td>
                        <td><b>Gün</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.Gun, null, new { @class = "form-control" })
                        </td>

                    </tr>
                    <tr>
                        <td><b>Başlama Tarihi</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.BaslamaTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "Date" })
                        </td>
                        <td><b>Bitiş Tarihi</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.BitisTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "Date" })
                        </td>
                        <td><b>Onay Durumu</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.OnayDurum, null, new { @class = "form-control" })
                        </td>

                    </tr>
            </table>
            <button class="btn btn-warning">Güncelle</button>
        </div>
    </div>
}

