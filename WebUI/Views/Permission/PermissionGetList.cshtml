@using Entities.Concrete
@model List<Permission>
@{
    ViewBag.Title = "PermissionGetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PermissionGetList</h2>

<h2>PersonelIzinGetirList</h2>

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">İzin Bilgileri</h3>
    </div>
    <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">İzin Şekli</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">İzin Sebebi</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Borclanma</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Yıl</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Ay</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Gün</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Başlama Tarihi</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Bitiş Tarihi</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Onay Durumu</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Seçim</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var e in Model)
            {
                <tr role="row" class="odd">
                    <td class="sorting_1">@e.IzinSekli</td>
                    <td>@e.IzınSebebi</td>
                    <td>@e.Borclanma</td>
                    <td>@e.Yil</td>
                    <td>@e.Ay</td>
                    <td>@e.Gun</td>
                    <td>@e.BaslamaTarihi</td>
                    <td>@e.BitisTarihi</td>
                    <td>@e.OnayDurumu</td>
                    <td><a href="/Permission/PermissionGet/@e.IzinBilgisiId" class="btn btn-warning col-xs-pull-5">Güncelle</a></td>
                </tr>
            }

        </tbody>
    </table>
    <!-- /.box-body -->
</div>
