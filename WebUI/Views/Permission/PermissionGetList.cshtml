@using Entities.Dto
@model List<PermissionDto>
@{
    ViewBag.Title = "PermissionGetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>İzin Bilgisi Güncelle</h3>

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">İzin Bilgileri</h3>
    </div>
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
            <thead>
                <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">#</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">İzin Türü</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">İzin Nedeni</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Başlama Tarihi</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Bitiş Tarihi</th>

                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Seçim</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var p in Model)
                {

                    <tr role="row" class="odd">
                        <td class="sorting_1"></td>
                        <td>@p.IzinTuru</td>
                        <td>@p.IzinNedeni</td>
                        <td>@p.BaslamaTarihi.ToShortDateString()</td>
                        <td>@p.BitisTarihi.ToShortDateString()</td>
                        <td>
                            <a href="/Permission/PermissionGet/@p.PersonelIzinId" class="btn btn-warning col-xs-pull-5">Güncelle</a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
        <br />
        <a href="/Permission/PermissionAdd/@ViewBag.PersonelKimlikId" class="btn btn-success col-xs-pull-5">Yeni İzin Bilgisi Ekle</a>
    </div>
</div>
