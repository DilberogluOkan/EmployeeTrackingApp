@using Entities.Dto
@model List<CriminalDto>
@{
    ViewBag.Title = "CriminalGetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Ceza Bilgisi Güncelle</h3>
<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">Ceza Bilgileri</h3>
    </div>
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
            <thead>
                <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">Ceza Veren Amir</th>

                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Verilen Ceza</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Ceza Tarihi</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Ceza Nedeni</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Cezayı Veren Kişinin Adı</th>
                    <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Seçim</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var c in Model)
                {
                    <tr role="row" class="odd">
                        <td class="sorting_1">@c.CezaVerenAmir</td>
                        <td>@c.VerilenCeza</td>
                        <td>@c.CezaTarihi</td>
                        <td>@c.CezaNedeni</td>
                        <td>@c.CezayiVerenKisiAdi</td>
                        <td>
                            <a href="/Criminal/CriminalGet/@c.PersonelCezaId" class="btn btn-warning col-xs-pull-5">Güncelle</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <a href="/Criminal/CriminalAdd/@ViewBag.PersonelKimlikId" class="btn btn-success col-xs-pull-5">Yeni Ceza Bilgisi Ekle</a>
    </div>
</div>

