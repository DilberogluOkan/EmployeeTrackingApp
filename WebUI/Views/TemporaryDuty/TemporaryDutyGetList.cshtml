@using Entities.Concrete
@model List<TemporaryDuty>
@{
    ViewBag.Title = "TemporaryDutyGetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Geçici Görev Bilgisi Güncelle</h3>


<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">Geçici Görev Bilgileri</h3>
    </div>
    <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">Görevlendirildiği Birlik</th>

                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Görev Yeri</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Başlama Tarihi</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Bitiş Tarihi</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Seçim</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var e in Model)
            {
                <tr role="row" class="odd">
                    <td class="sorting_1">@e.GorevlendigiBirlik</td>
                    <td>@e.GorevYeri</td>
                    <td>@e.BaslamaTarihi</td>
                    <td>@e.BitisTarihi</td>

                    <td><a href="/TemporaryDuty/TemporaryDutyGet/@e.PersonelGeciciGorevId" class="btn btn-warning col-xs-pull-5">Güncelle</a></td>
                </tr>
            }

        </tbody>
    </table>
    <!-- /.box-body -->
</div>
