
@using Entities.Concrete
@model WorkingPrice
@{
    ViewBag.Title = "WorkingPriceAddGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Çalışma Ücreti Bilgisi Ekle</h3>
@using (Html.BeginForm("WorkingPriceAdd", "WorkingPrice", FormMethod.Post))
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                <thead>

                </thead>
                <tbody>
                    <tr role="row" class="odd">
                        <td class="sorting_1"><b>Ücret Türü</b></td>
                        <td>

                            @Html.Hidden("PersonelKimlikId", (int)ViewBag.PersonelKimlikId)
                            @Html.HiddenFor(x => x.CalismaUcretBilgiId)
                            @Html.DropDownListFor(x => x.UcretTurId, ViewBag.PriceTypeGrpList as SelectList, "--Ücret Türü--", new { @class = "form-control" })

                        </td>
                        <td><b>Günlük Çalışma Süresi</b></td>
                        <td>
                            @Html.DropDownListFor(x => x.GunlukCalismaSureId, ViewBag.DailyWorkingTimeGrpList as SelectList, "Günlük Çalışma Süresi", new { @class = "form-control" })

                        </td>

                    </tr>
                    <tr>
                        <td><b>Ücret Derecesi</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.UcretDerece, new { @class = "form-control" })

                        </td>
                        <td><b>ÜcretDerecesine Terfi</b></td>
                        <td>
                            @Html.DropDownListFor(x => x.UcretDerecesineTerfiId, ViewBag.PriceGradeRiseGrpList as SelectList, "--Ücret Derecesine Terfi--", new { @class = "form-control" })

                        </td>

                    </tr>
                    <tr>
                        <td ><b>Son Ücret Derecesine Yükselme Tarihi</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.SonUcretDerecesineYukselmeTarih, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "Date" })

                        </td>
                        <td colspan="2"><b></b></td>
                       
                    </tr>
</table>
            <button class="btn btn-success">Ekle</button>
        </div>
    </div>
}
