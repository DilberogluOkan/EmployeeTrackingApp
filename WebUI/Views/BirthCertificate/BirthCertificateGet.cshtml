@using Entities.Concrete
@model BirthCertificate
@{
    ViewBag.Title = "BirthCertificateGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Nüfus Bilgisi Güncelle</h3>
@using (Html.BeginForm("BirthCertificateUpdate", "BirthCertificate", FormMethod.Post))
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                <thead>

                </thead>
                <tbody>
                    <tr role="row" class="odd">
                        <td class="sorting_1"><b>Seri No</b></td>
                        <td>
                            @Html.HiddenFor(x => x.PersonelNufusId)
                            @Html.TextBoxFor(x => x.SeriNo, null, new { @class = "form-control" })
                        </td>
                        <td><b>Cilt No</b></td>
                        <td>@Html.TextBoxFor(x => x.CiltNo, null, new { @class = "form-control" })</td>

                    </tr>
                    <tr role="row" class="odd">


                        <td class="sorting_1"><b>Sıra No</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.SiraNo, null, new { @class = "form-control" })
                        </td>

                        <td class="sorting_1"><b>İl</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.Il, null, new { @class = "form-control" })
                        </td>


                    </tr>
                    <tr role="row" class="odd">
                        <td><b>Aile Sıra No</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.AileSiraNo, null, new { @class = "form-control" })
                        </td>
                        <td><b>Nüfus Açıklama 1</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.NufusAciklama1, null, new { @class = "form-control" })
                        </td>

                    </tr>

                    <tr role="row" class="odd">
                        <td><b>Nüfus Açıklama 2</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.NufusAciklama2, null, new { @class = "form-control" })
                        </td>
                        <td><b>Giriş Yapan</b></td>
                        <td>
                            @Html.TextBoxFor(x => x.GirisYapan, null, new { @class = "form-control" })
                        </td>

                    </tr>

                </tbody>
            </table>
            <button class="btn btn-warning">Güncelle</button>
        </div>
    </div>
}
