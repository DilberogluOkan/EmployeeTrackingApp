@using Entities.Concrete
@model List<Promotion>
@{
    ViewBag.Title = "RiseGetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RiseGetList</h2>
<h2>PersonelTerfiGetirList</h2>

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">Terfi Bilgileri</h3>
    </div>
    <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
        <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Rendering engine: activate " aria-sort="ascending">Derece</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Kademe</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Terfi Tarihi</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Değişiklik Nedeni</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Açıklama</th>
                <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Seçim</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var t in Model)
            {
                <tr role="row" class="odd">
                    <td class="sorting_1">@t.Derece</td>
                    <td>@t.Kademe</td>
                    <td>@t.TerfiTarih</td>
                    <td>@t.DegisiklikNedeni</td>
                    <td>@t.Aciklama</td>
                    <td><a href="/Rise/RiseGet/@t.TerfiBilgiId" class="btn btn-warning col-xs-pull-5">Güncelle</a></td>
                </tr>
            }

        </tbody>
    </table>
    <!-- /.box-body -->
</div>

