@{
    ViewBag.Title = "Home Page";
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Anasayfa</h2>

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@ViewBag.AllEmployeeCount</h3>

                    <p>Toplam İşçi Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-stalker"></i>
                </div>
                <a href="#" class="small-box-footer"><i class="fa fa-arrow"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@ViewBag.WomenCount / @ViewBag.ManCount<sup style="font-size: 20px"></sup></h3>

                    <p>Kadın / Erkek Oranı</p>
                </div>
                <div class="icon">
                    <i class="fa fa-venus-mars"></i>
                </div>
                <a href="#" class="small-box-footer"><i class="fa fa-arrow"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@ViewBag.AgeCount</h3>

                    <p>50 Yaş Üstü Çalışan Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="#" class="small-box-footer"><i class="fa fa-arrow"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@ViewBag.CurrentStatusCount</h3>

                    <p>696 ile Taşerondan Geçen İşçi Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="#" class="small-box-footer"> <i class="fa fa-arrow"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <section class="col-lg-7 connectedSortable ui-sortable">
            <!-- Custom tabs (Charts with tabs)-->
            <div class="box box-primary">
                <div class="row">
                    <div class="col-md-10">
                        <div class="box-header with-border">
                            <h3 class="box-title">İş Yerleri İşçi Dağılımı</h3>
                        </div>
                    </div>
                    <div class="col-md-2">
                        @*<div class="box-header with-border">
                            <h3 class="box-title"><a href="/Query/InspectionHeadquartersPdf/" class="btn btn-github">Raporla</a></h3>
                        </div>*@
                    </div>
                </div>
               
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Birimler</th>
                                <th>Oran</th>
                                <th style="width: 100px">Kişi sayısı</th>
                            </tr>
                            <tr>
                                <td>1.</td>
                                <td>Tersaneler Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-red">@ViewBag.TgmCount</span></td>
                            </tr>
                            <tr>
                                <td>2.</td>
                                <td>Askeri Fabrikalar Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar progress-bar-yellow" style="width: 70%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-yellow">@ViewBag.AfgmCount</span></td>
                            </tr>
                            <tr>
                                <td>3.</td>
                                <td>Tedarik Hizmetleri Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-primary" style="width: 30%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-blue">@ViewBag.TedgmCount</span></td>
                            </tr>
                            <tr>
                                <td>4.</td>
                                <td>Yönetim Hizmetleri Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-success" style="width: 60%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-green">@ViewBag.YhgmCount</span></td>
                            </tr>
                            <tr>
                                <td>5.</td>
                                <td>Lojistik Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-info" style="width: 35%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-aqua">@ViewBag.LgmCount</span></td>
                            </tr>

                            <tr>
                                <td>6.</td>
                                <td>Harita Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-yellow" style="width: 15%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-yellow">@ViewBag.HgmCount</span></td>
                            </tr>

                            <tr>
                                <td>7.</td>
                                <td>ASAL Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-red" style="width: 56%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-red">@ViewBag.AsalCount</span></td>
                            </tr>
                            <tr>
                                <td>8.</td>
                                <td>Kara Kuvvetleri Komutanlığı</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-green" style="width: 43%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-green">@ViewBag.KkkCount</span></td>
                            </tr>
                            <tr>
                                <td>9.</td>
                                <td>Hava Kuvvetleri Komutanlığı</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-info" style="width: 20%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-aqua">@ViewBag.HvkkCount</span></td>
                            </tr>
                            <tr>
                                <td>10.</td>
                                <td>Deniz Kuvvetleri Komutanlığı</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-warning" style="width: 40%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-yellow">@ViewBag.DzkkCount</span></td>
                            </tr>
                            <tr>
                                <td>11.</td>
                                <td>Milli Savunma Üniversitesi</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-light-blue" style="width: 45%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-blue">@ViewBag.MsuCount</span></td>
                            </tr>
                            <tr>
                                <td>12.</td>
                                <td>Askeri Sağlık Hizmerleri Genel Müdürlüğü</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-info" style="width: 35%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-aqua">@ViewBag.AshgmCount</span></td>
                            </tr>
                            <tr>
                                <td>13.</td>
                                <td>Genelkurmay Başkanlığı </td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-green" style="width: 20%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-green">@ViewBag.GnkurCount</span></td>
                            </tr>
                            <tr>
                                <td>13.</td>
                                <td>Askeri Fabrika ve Tersane İşletme A.Ş.</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-warning" style="width: 35%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-yellow">@ViewBag.AsfatCount</span></td>
                            </tr>
                            <tr>
                                <td>#</td>
                                <td>Toplam</td>
                                <td>
                                    <div class="progress progress-xs progress-striped active">
                                        <div class="progress-bar progress-bar-light-blue" style="width: 100%"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-blue">@ViewBag.Sum</span></td>
                            </tr>
                            <tr>
                                <td colspan="4"><a href="/Query/InspectionHeadquartersPdf/" class="btn btn-github pull-right"><i class="fa fa-print"></i> Raporla</a></td>
                               
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->

            </div>

            <!-- /.nav-tabs-custom -->
            <!-- Chat box -->
            <!-- /.box (chat box) -->
            <!-- TO DO List -->
            <!-- /.box -->
            <!-- quick email widget -->


        </section>
        <!-- /.Left col -->
        <!-- right col (We are only adding the ID to make the widgets sortable)-->
        <section class="col-lg-5 connectedSortable ui-sortable">
            <div class="box box-primary">
                <div class="box-header ui-sortable-handle" style="cursor: move;">
                    <i class="ion ion-clipboard"></i>

                    <h3 class="box-title">Yapılacaklar Listesi</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
                    <ul class="todo-list ui-sortable">
                        <li>
                            <!-- drag handle -->
                            <span class="handle ui-sortable-handle">
                                <i class="fa fa-ellipsis-v"></i>
                                <i class="fa fa-ellipsis-v"></i>
                            </span>
                            <!-- checkbox -->
                            <input type="checkbox" value="">
                            <!-- todo text -->
                            <span class="text">Personel Eklenecek</span>
                            <!-- Emphasis label -->
                            <small class="label label-danger"><i class="fa fa-clock-o"></i> 2 mins</small>
                            <!-- General tools such as edit or delete-->
                            <div class="tools">
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash-o"></i>
                            </div>
                        </li>
                        <li>
                            <span class="handle ui-sortable-handle">
                                <i class="fa fa-ellipsis-v"></i>
                                <i class="fa fa-ellipsis-v"></i>
                            </span>
                            <input type="checkbox" value="">
                            <span class="text">Raporlama Yapılacak</span>
                            <small class="label label-info"><i class="fa fa-clock-o"></i> 4 hours</small>
                            <div class="tools">
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash-o"></i>
                            </div>
                        </li>
                        <li>
                            <span class="handle ui-sortable-handle">
                                <i class="fa fa-ellipsis-v"></i>
                                <i class="fa fa-ellipsis-v"></i>
                            </span>
                            <input type="checkbox" value="">
                            <span class="text">Personel arama</span>
                            <small class="label label-success"><i class="fa fa-clock-o"></i> 1 week</small>
                            <div class="tools">
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash-o"></i>
                            </div>
                        </li>
                        <li>
                            <span class="handle ui-sortable-handle">
                                <i class="fa fa-ellipsis-v"></i>
                                <i class="fa fa-ellipsis-v"></i>
                            </span>
                            <input type="checkbox" value="">
                            <span class="text">Güncelleme Yapılacak</span>
                            <small class="label label-warning"><i class="fa fa-clock-o"></i> 4 hours</small>
                            <div class="tools">
                                <i class="fa fa-edit"></i>
                                <i class="fa fa-trash-o"></i>
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix no-border">
                    <button type="button" class="btn btn-default pull-right"><i class="fa fa-plus"></i>  Ekle</button>
                </div>
            </div>
            <!-- Map box -->
            <!-- /.box -->
            <!-- solid sales graph -->
            <!-- /.box -->
            <!-- Calendar -->
            <!-- /.box -->
            <div class="">
                <!-- Info Boxes Style 2 -->
                <div class="info-box bg-yellow">
                    <span class="info-box-icon"><i class="fa fa-graduation-cap"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Toplam Müh. İşçi Sayısı</span>
                        <span class="info-box-number">@ViewBag.EngineerPersonCount</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 3%"></div>
                        </div>
                        <span class="progress-description">
                            Toplam Oran: @ViewBag.ModEngineerPerson %
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box bg-green">
                    <span class="info-box-icon"><i class="fa fa-wheelchair"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Toplam Engelli İşçi Sayısı</span>
                        <span class="info-box-number">@ViewBag.DisabilityStatus</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 20%"></div>
                        </div>
                        <span class="progress-description">
                            Toplam Oran: @ViewBag.ModDisabilityStatus %
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box bg-red">
                    <span class="info-box-icon"><i class="ion ion-ios-people"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Toplam Emekli Sayısı</span>
                        <span class="info-box-number">0</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 0 %"></div>
                        </div>
                        <span class="progress-description">
                            Toplam Oran: 0%
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->


            </div>
        </section>
        <!-- right col -->
    </div>
    <!-- /.row (main row) -->

</section>
