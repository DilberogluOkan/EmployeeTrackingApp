@using Entities.Concrete.DynamicDataEntity
@model List<DesignationStatus>
@{
    ViewBag.Title = "DesignationStatusGetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Nakil Durumları</h3>

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title">Nakil Durum</h3>
    </div>
    <div class="box-body">
        <div class="box-header">
            <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                <thead>
                    <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending">#</th>

                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1">Nakil Durumu</th>

                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">İşlem</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var e in Model)
                    {
                        <tr role="row" class="odd">
                            <td class="sorting_1">@e.NakilDurumId</td>
                            <td>@e.NakilDurumu</td>
                            <td>
                                <a href="/DesignationStatus/DesignationStatusGetById/@e.NakilDurumId" class="btn btn-warning col-xs-pull-5">Güncelle</a>
                                <a href="/DesignationStatus/DesignationStatusDelete/@e.NakilDurumId" class="btn btn-danger col-xs-pull-5">Sil</a>
                            </td>

                        </tr>
                    }
                    <tr role="row" class="odd">
                        <td colspan="2"></td>
                        <td>
                            <a href="/DesignationStatus/DesignationStatusAdd" class="btn btn-success col-xs-pull-5" style="width:128px">Yeni Ekle</a>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
    </div>

